<Project Sdk="Microsoft.NET.Sdk">
		<PropertyGroup>
				<TargetFrameworks>net6.0;net8.0</TargetFrameworks>
				<ImplicitUsings>enable</ImplicitUsings>
				<Nullable>enable</Nullable>
				<LangVersion>latest</LangVersion>
				<PackageId>$(AssemblyName)</PackageId>
				<Version>$(Version)</Version>
				<Description>SQLite document storage</Description>
				<PackageLicenseExpression>GPL-2.0-only</PackageLicenseExpression>
				<Authors>Axio</Authors>
				<Company>$(Authors)</Company>
				<Copyright>Axio</Copyright>
				<PackageProjectUrl>https://github.com/casualshammy/Ax.Fw</PackageProjectUrl>
				<RepositoryType>git</RepositoryType>
				<RepositoryUrl>https://github.com/casualshammy/Ax.Fw</RepositoryUrl>
				<PackageReadmeFile>README.md</PackageReadmeFile>
				<PackageTags>nosql;no sql;no-sql;sqlite;document;db;database</PackageTags>
		</PropertyGroup>
		<ItemGroup>
				<PackageReference Include="Microsoft.Data.Sqlite" Version="8.0.0" />
				<PackageReference Include="System.Data.SQLite.Core" Version="1.0.118" />
		</ItemGroup>
		<ItemGroup>
				<None Include="README.md" Pack="true" PackagePath="\" />
		</ItemGroup>
		<ItemGroup>
				<ProjectReference Include="..\Ax.Fw\Ax.Fw.csproj" />
		</ItemGroup>

</Project>
